/* pages/plugin/tab/tab.wxss */
.b-tab {
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #dedede;
}
.b-tab .tab-item {
  position: relative;
  height: 100%;
  flex: 1;
  text-align: center;
}
.b-tab .tab-item .item-name {
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin: -20rpx 0 0 0;
  color: #666666;
  font-size: 30rpx;
  text-align: center;
}
.b-tab .tab-item.tab-now .item-name {
  color: #ff9232;
}
.b-tab .tab-item .item-line {
  position: absolute;
  top: 50%;
  right: -1px;
  width: 2px;
  height: 30rpx;
  margin: -15rpx 0 0 0;
  background: #e2e2e2;
}
.b-tab .tab-line {
  position: absolute;
  left: 0;
  bottom: -1rpx;
  height: 4rpx;
  background: #ff9232;
  transition-duration: 300ms;
}
