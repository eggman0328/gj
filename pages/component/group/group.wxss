/* pages/component/group/group.wxss */
.group {
  position: relative;
  width: 100%;
  height: 100%;
}
.group .group-rule {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 8;
}
.group .group-rule .filter {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}
.group .group-rule .container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 600rpx;
  height: 811rpx;
  margin-top: 40rpx;
  background: url("http://img.v2.babystory365.com/wechatapp/guojiang/img-group-rule.png") no-repeat center center/contain;
}
.group .group-count {
  position: absolute;
  left: 0;
  top: 168rpx;
  bottom: 0;
  width: 100%;
}
.group .group-count .container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.group .group-count .container .pack {
  position: relative;
  width: 680rpx;
  height: 819rpx;
  background: url("http://img.v2.babystory365.com/wechatapp/guojiang/img-group-pack.png") no-repeat center center/contain;
}
.group .group-count .container .pack .info {
  position: absolute;
  left: 50%;
  top: 80rpx;
  width: 500rpx;
  margin-left: -250rpx;
  height: 200rpx;
}
.group .group-count .container .pack .info .time {
  position: relative;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
}
.group .group-count .container .pack .info .time .item {
  display: inline-block;
  vertical-align: middle;
  width: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 62rpx;
  color: #946a37;
  background: #ffe5ba;
  margin: 0 8rpx;
}
.group .group-count .container .pack .info .time .dot {
  display: inline-block;
  vertical-align: middle;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 62rpx;
  color: #946a37;
  margin: 0;
}
.group .group-count .container .pack .info .tip {
  position: relative;
  width: 100%;
  color: #946a37;
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}
.group .group-count .container .pack .active {
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  width: 600rpx;
  height: 280rpx;
  margin-left: -300rpx;
}
.group .group-count .container .pack .active .people {
  position: relative;
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
}
.group .group-count .container .pack .active .people .text {
  display: inline-block;
  vertical-align: bottom;
  font-size: 46rpx;
  color: #ffe5ba;
}
.group .group-count .container .pack .active .btn {
  font-size: 32rpx;
  color: #633100;
  background: #ffb000;
  border-radius: 88rpx;
  width: 550rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 30rpx auto 0;
}
.group .group-count .container .active-rule {
  display: block;
  margin: 60rpx auto 20rpx;
  text-align: center;
}
.group .group-count .container .active-rule .link {
  display: inline-block;
  vertical-align: middle;
  padding-left: 54rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  color: #946a37;
  background: url(http://img.v2.babystory365.com/wechatapp/guojiang/icon-group-tip.png) no-repeat center left/39rpx 39rpx;
}
.group .group-count .container .active-back {
  display: block;
  margin: 20rpx auto 60rpx;
  text-align: center;
}
.group .group-count .container .active-back .link{
  display: inline-block;
  vertical-align: middle;
  padding-left: 54rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  color: #946a37;
  background: url(http://img.v2.babystory365.com/wechatapp/guojiang/icon-group-back.png) no-repeat center left/39rpx 39rpx;
}