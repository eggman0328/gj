/* pages/component/banner/banner.wxss */
.b-banner {
  position: relative;
  width: 100%;
  padding: 20rpx 30rpx 40rpx 30rpx;
  box-sizing: border-box;
}
.b-banner .banner-img {
  width: 100%;
  height: 280rpx;
  overflow: hidden;
  border-radius: 8px;
}
.b-banner .banner-img .img {
  width: 100%;
  height: 100%;
  background: #cccccc;
}
.b-banner .banner-title {
  position: relative;
  margin-top: 20rpx;
}
.b-banner .banner-title .name {
  display: block;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #000000;
  font-weight: bold;
}
.b-banner .banner-title .count {
  position: absolute;
  top: 0;
  right: 0;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #999999;
}