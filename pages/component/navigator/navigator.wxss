/* pages/component/navigator/navigator.wxss */

.b-navigator {
  position: relative;
  left: 50%;
  top: 0;
  transform: translate(-50%,0);
  width: 1000rpx;
  height: 164rpx;
  background: #ffb24a;
  z-index: 10;
  border-bottom-left-radius: 100%;
  border-bottom-right-radius: 100%;
  overflow: hidden;
}

.b-navigator .b-text {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 400rpx;
  line-height: 100rpx;
  margin: -50rpx 0 0 -200rpx;
  font-size: 34rpx;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  z-index: 11;
}